{{#displayactivity}}
    <script>
        var assistantName = '{{assistantname}}';
        var userName = '{{username}}';
    </script>
    <style>
        .openai_message:before {
            display: none;
        }
        .openai_message {
            margin-bottom: 0.5rem;
        }
        .openai_message.user:before {
            content: {{username}};
        }
        .openai_message.bot:before {
            content: {{assistantname}};
        }
    </style>

    <div class="maici_container">
        {{{instructions}}}
        <div id="openai_chat_log" role="log"></div>
        <div id="control_bar">
            <div id="input_bar">
                <input id="openai_input" placeholder="Ask question.." type="text" name="message" />
                <button title="Submit" id="go"><i class="fa-solid fa-arrow-right"></i></button>
            </div>
            <button title="New chat" id="refresh"><i class="fa-solid fa-arrows-rotate"></i></button>
        </div>
    </div>
{{/displayactivity}}
{{^displayactivity}}
    {{{instructions}}}
    {{{info}}}
{{/displayactivity}}
{{#js}}
    require(['jquery'], function($) {
    $(document).ready(function() {
    // Find the div with ID "intro" and hide it
    $("#intro").hide();
    });
    });
{{/js}}